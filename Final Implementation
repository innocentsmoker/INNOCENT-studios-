                frequency: "105.2 FM",
                location: "Nairobi",
                genre: "Music",
                logo: "https://via.placeholder.com/60",
                streamUrl: "https://example.com/stream4"
            },
            {
                id: 5,
                name: "Radio Maisha",
                frequency: "93.3 FM",
                location: "Nairobi",
                genre: "News, Talk",
                logo: "https://via.placeholder.com/60",
                streamUrl: "https://example.com/stream5"
            },
            {
                id: 6,
                name: "Milele FM",
                frequency: "104.8 FM",
                location: "Mombasa",
                genre: "Music, Entertainment",
                logo: "https://via.placeholder.com/60",
                streamUrl: "https://example.com/stream6"
            }
        ];

        // Function to display stations
        function displayStations(stations) {
            const container = document.getElementById('stations-container');
            container.innerHTML = '';
            
            if (stations.length === 0) {
                container.innerHTML = `
                    <div class="error-message" style="grid-column: 1 / -1;">
                        <i class="fas fa-exclamation-circle"></i>
                        <h3>No stations found</h3>
                        <p>Try adjusting your search or filter criteria.</p>
                    </div>
                `;
                return;
            }
            
            stations.forEach(station => {
                const card = document.createElement('div');
                card.className = 'station-card';
                card.innerHTML = `
                    <div class="card-header">
                        <img src="${station.logo}" alt="${station.name} Logo" class="card-logo">
                        <div class="card-title">
                            <h3>${station.name}</h3>
                            <p>${station.frequency}</p>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-details">
                            <div class="card-detail">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>${station.location}</span>
                            </div>
                            <div class="card-detail">
                                <i class="fas fa-music"></i>
                                <span>${station.genre}</span>
                            </div>
                        </div>
                        <div class="card-actions">
                            <button class="play-action" data-id="${station.id}">
                                <i class="fas fa-play"></i> Play Now
                            </button>
                            <button class="favorite-btn" data-id="${station.id}">
                                <i class="far fa-heart"></i>
                            </button>
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
            
            // Add event listeners to play buttons
            document.querySelectorAll('.play-action').forEach(button => {
                button.addEventListener('click', function() {
                    const stationId = this.getAttribute('data-id');
                    playStation(stationId);
                });
            });
            
            // Add event listeners to favorite buttons
            document.querySelectorAll('.favorite-btn').forEach(button => {
                button.addEventListener('click', function() {
                    this.classList.toggle('active');
                    this.querySelector('i').classList.toggle('far');
                    this.querySelector('i').classList.toggle('fas');
                });
            });
        }

        // Function to play a station
        function playStation(stationId) {
            const station = sampleStations.find(s => s.id == stationId);
            if (!station) return;
            
            // Update player UI
            document.querySelector('.station-logo').src = station.logo;
            document.querySelector('.station-details h4').textContent = station.name;
            document.querySelector('.station-details p').textContent = `${station.frequency} • ${station.location} • ${station.genre}`;
            
            // In a real app, we would set the audio source here
            // For demo purposes, we'll just simulate playing
            const playBtn = document.querySelector('.play-btn');
            playBtn.innerHTML = '<i class="fas fa-pause"></i>';
            
            // Show a message
            alert(`Now playing: ${station.name}. In a real application, this would stream from: ${station.streamUrl}`);
        }

        // Initialize the app
        document.addEventListener('DOMContentLoaded', function() {
            // Display sample stations
            displayStations(sampleStations);
            
            // Play button functionality
            document.querySelector('.play-btn').addEventListener('click', function() {
                const icon = this.querySelector('i');
                if (icon.classList.contains('fa-play')) {
                    icon.classList.remove('fa-play');
                    icon.classList.add('fa-pause');
                    // In a real app, we would start playing the audio here
                } else {
                    icon.classList.remove('fa-pause');
                    icon.classList.add('fa-play');
                    // In a real app, we would pause the audio here
                }
            });
            
            // Search functionality
            document.querySelector('.search-box input').addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const filteredStations = sampleStations.filter(station => 
                    station.name.toLowerCase().includes(searchTerm) ||
                    station.location.toLowerCase().includes(searchTerm) ||
                    station.genre.toLowerCase().includes(searchTerm)
                );
                displayStations(filteredStations);
            });
            
            // Filter functionality
            document.querySelectorAll('.filter-select').forEach(select => {
                select.addEventListener('change', function() {
                    // In a real app, we would implement more complex filtering
                    // For now, we'll just use the search functionality
                    const searchTerm = document.querySelector('.search-box input').value.toLowerCase();
                    const filteredStations = sampleStations.filter(station => 
                        station.name.toLowerCase().includes(searchTerm) ||
                        station.location.toLowerCase().includes(searchTerm) ||
                        station.genre.toLowerCase().includes(searchTerm)
                    );
                    displayStations(filteredStations);
                });
            });
            
            // View toggle functionality
            document.querySelectorAll('.view-btn').forEach(button => {
                button.addEventListener('click', function() {
                    document.querySelectorAll('.view-btn').forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    // In a real app, we would change the layout here
                    const container = document.getElementById('stations-container');
                    if (this.querySelector('i').classList.contains('fa-list')) {
                        container.classList.add('list-view');
                    } else {
                        container.classList.remove('list-view');
                    }
                });
            });
        });

        // In a real application, we would fetch data from the API like this:
        /*
